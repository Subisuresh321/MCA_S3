      android:text="+"
      android:textSize="30dp" />

  <Button
      android:id="@+id/btn4"
      android:layout_marginLeft="5dp"
      android:text="4"
      android:textSize="30dp" />

  <Button
      android:id="@+id/btn5"
      android:layout_marginLeft="5dp"
